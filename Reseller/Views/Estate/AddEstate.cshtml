@model Reseller.Models.Estate
@{ ViewData["Title"] = "Emlak Ekle";
    Layout = "_AdminLayout.cshtml"; }

@using Reseller.Controllers

<h3 class="text-center mt-5">Emlak Ekleme Sayfası</h3>
<br />

<form class="p-1 m-1" method="post">



    <div class="mt-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="EstateCategory">Emlak Kategorisi</label>
        </div>
        <select id="EstateCategory" name="EstateCategory" class="custom-select" required>
            <option value="" selected disabled>Kategori seçimi yapınız...</option>
            <option asp-for="EstateCategory" name="Konut" value="Konut">Konut</option>
            <option asp-for="EstateCategory" name="IsYeri" value="IsYeri">İş Yeri</option>
            <option asp-for="EstateCategory" name="Arsa" value="Arsa">Arsa</option>
            <option asp-for="EstateCategory" name="Bina" value="Bina">Bina</option>
            <option asp-for="EstateCategory" name="Tesis" value="Tesis">Turistik Tesis</option>
        </select>
    </div>
    <br />
    <br />
    <br />

    <div class="mt-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="StatusInfo">Durum</label>
        </div>
        <select id="StatusInfo" name="StatusInfo" class="custom-select" required>
            <option value="" selected disabled>Kiralık/Satılık seçimi yapınız...</option>
            <option asp-for="StatusInfo" name="Kiralık" value="Kiralık">Kiralık</option>
            <option asp-for="StatusInfo" name="Satılık" value="Satılık">Satılık</option>
        </select>
    </div>

    <br />
    <br />
    <br />

    <div class="mt-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Emlak İlan Adı</span>
            </div>
            <textarea asp-for="EstateName" class="form-control" aria-label="With textarea" required></textarea>
        </div>
    </div>
    <br />

    <div class="mt-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Ayrıntılı Bilgi</span>
            </div>
            <textarea asp-for="EstateInfo" class="form-control" aria-label="With textarea" required></textarea>
        </div>
    </div>
    <br />


    <div class="mt-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="City">Konum</label>
        </div>
        <select id="City" name="City" class="custom-select" required>
            <option value="" selected disabled>Şehir...</option>
            <option asp-for="City" name="Adana" value="Adana">Adana</option>
            <option asp-for="City" name="Ankara" value="Ankara">Ankara</option>
            <option asp-for="City" name="Bursa" value="Bursa">Bursa</option>
            <option asp-for="City" name="Gaziantep" value="Gaziantep">Gaziantep</option>
            <option asp-for="City" name="Hatay" value="Hatay">Hatay</option>
            <option asp-for="City" name="İstanbul" value="İstanbul">İstanbul</option>
            <option asp-for="City" name="İzmir" value="İzmir">İzmir</option>
            <option asp-for="City" name="Konya" value="Konya">Konya</option>
            <option asp-for="City" name="Muğla" value="Muğla">Muğla</option>
            <option asp-for="City" name="Trabzon" value="Trabzon">Trabzon</option>
        </select>
    </div>
    <br />
    <br />
    <br />

    <div class="mt-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Adres</span>
            </div>
            <textarea asp-for="LocationName" class="form-control" aria-label="With textarea" required></textarea>
        </div>
    </div>
    <br />

    <div class="mt-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Fiyat</span>
            </div>
            <textarea asp-for="EstatePrice" class="form-control" aria-label="With textarea" required></textarea>
        </div>
    </div>
    <br />


    <input type="file" asp-for="EstatePicture" name="EstatePicture" required />



    <!--

    <b>Tablolu sorular için fotoğraf ekleyebilirsiniz (.jpeg ve .png uzantılı dosyalar kabul edilmektedir)</b>
        <br />
        <input id="fileInput" type="file" name="postedFile" accept="audio/*,image/*" />

        <br />
        -->

    <button id="btnSaveForReading" type="submit" class="btn btn-success btnSaveForReading" style="float: right;">Kaydet</button>

    <br />
    <br />
</form>

