@model Reseller.Models.Vehicle
@{ ViewData["Title"] = "Araç Güncelleme";
    Layout = "_AdminLayout.cshtml"; }

@using Reseller.Controllers

<h3 class="text-center mt-5">Araç Bilgisi Güncelleme Sayfası</h3>
<br />

<form class="p-1 m-1" method="post">

    <div class="mt-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="VehicleCategory">Araç Kategorisi</label>
        </div>
        <select id="VehicleCategory" name="VehicleCategory" class="custom-select" required>
            <option value="" selected disabled>Kategori seçimi yapınız...</option>
            <option asp-for="VehicleCategory" name="Otomobil" value="Otomobil">Otomobil</option>
            <option asp-for="VehicleCategory" name="Pickup" value="Pickup">Arazi, SUV & Pickup</option>
            <option asp-for="VehicleCategory" name="Motosiklet" value="Motosiklet">Motosiklet</option>
            <option asp-for="VehicleCategory" name="Van" value="Van">Minivan & Panelvan</option>
            <option asp-for="VehicleCategory" name="Ticari" value="Ticari">Ticari Araçlar</option>
            <option asp-for="VehicleCategory" name="Elektrikli" value="Elektrikli">Elektrikli Araçlar</option>
            <option asp-for="VehicleCategory" name="Deniz" value="Deniz">Deniz Araçları</option>
        </select>
    </div>
    <br />
    <br />
    <br />

    <div class="mt-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Araç Adı</span>
            </div>
            <textarea asp-for="VehicleName" class="form-control" aria-label="With textarea" required></textarea>
        </div>
    </div>
    <br />

    <div class="mt-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="BrandName">Araba Modeli</label>
        </div>
        <select id="BrandName" name="BrandName" class="custom-select" required>
            <option value="" selected disabled>Araba Modeli...</option>
            <option asp-for="BrandName" name="Alfa Romeo" value="Alfa Romeo">Alfa Romeo</option>
            <option asp-for="BrandName" name="Aston Martin" value="Aston Martin">Aston Martin</option>
            <option asp-for="BrandName" name="Audi" value="Audi">Audi</option>
            <option asp-for="BrandName" name="BMW" value="BMW">BMW</option>
            <option asp-for="BrandName" name="Bugatti" value="Bugatti">Bugatti</option>
            <option asp-for="BrandName" name="Cadillac" value="Cadillac">Cadillac</option>
            <option asp-for="BrandName" name="Chery" value="Chery">Chery</option>
            <option asp-for="BrandName" name="Chevrolet" value="Chevrolet">Chevrolet</option>
            <option asp-for="BrandName" name="Chrysler" value="Chrysler">Chrysler</option>
            <option asp-for="BrandName" name="Citroen" value="Citroen">Citroen</option>
            <option asp-for="BrandName" name="Dacia" value="Dacia">Kur Sınavı</option>
            <option asp-for="BrandName" name="Daihatsu" value="Daihatsu">Daihatsu</option>
            <option asp-for="BrandName" name="Dodge" value="Dodge">Dodge</option>
            <option asp-for="BrandName" name="Ferrari" value="Ferrari">Ferrari</option>
            <option asp-for="BrandName" name="Fiat" value="Fiat">Fiat</option>
            <option asp-for="BrandName" name="Ford" value="Ford">Ford</option>
            <option asp-for="BrandName" name="Honda" value="Honda">Honda</option>
            <option asp-for="BrandName" name="Hyundai" value="Hyundai">Hyundai</option>
            <option asp-for="BrandName" name="Jaguar" value="Jaguar">Jaguar</option>
            <option asp-for="BrandName" name="Kia" value="Kia">Kia</option>
            <option asp-for="BrandName" name="Lada" value="Lada">Lada</option>
            <option asp-for="BrandName" name="Lamborghini" value="Lamborghini">Lamborghini</option>
            <option asp-for="BrandName" name="Maserati" value="Maserati">Maserati</option>
            <option asp-for="BrandName" name="Mazda" value="Mazda">Mazda</option>
            <option asp-for="BrandName" name="McLaren" value="McLaren">McLaren</option>
            <option asp-for="BrandName" name="Mercedes-Benz" value="Mercedes-Benz">Mercedes-Benz</option>
            <option asp-for="BrandName" name="Mini" value="Mini">Mini</option>
            <option asp-for="BrandName" name="Mitsubishi" value="Mitsubishi">Mitsubishi</option>
            <option asp-for="BrandName" name="Nissan" value="Nissan">Nissan</option>
            <option asp-for="BrandName" name="Opel" value="Opel">Opel</option>
            <option asp-for="BrandName" name="Peugeot" value="Peugeot">Peugeot</option>
            <option asp-for="BrandName" name="Porsche" value="Porsche">Porsche</option>
            <option asp-for="BrandName" name="Renault" value="Renault">Renault</option>
            <option asp-for="BrandName" name="Rolls-Royce" value="Rolls-Royce">Rolls-Royce</option>
            <option asp-for="BrandName" name="Seat" value="Seat">Seat</option>
            <option asp-for="BrandName" name="Skoda" value="Skoda">Skoda</option>
            <option asp-for="BrandName" name="Tesla" value="Tesla">Tesla</option>
            <option asp-for="BrandName" name="Tofaş" value="Tofaş">Tofaş</option>
            <option asp-for="BrandName" name="Toyota" value="Toyota">Toyota</option>
            <option asp-for="BrandName" name="Volkswagen" value="Volkswagen">Volkswagen</option>
            <option asp-for="BrandName" name="Volvo" value="Volvo">Volvo</option>
        </select>
    </div>
    <br />
    <br />
    <br />

    <div class="mt-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Üretim Yılı</span>
            </div>
            <textarea asp-for="VehicleYear" class="form-control" aria-label="With textarea" required></textarea>
        </div>
        <br />
    </div>

    <div class="mt-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Model Adı</span>
            </div>
            <textarea asp-for="VehicleModelName" class="form-control" aria-label="With textarea" required></textarea>
        </div>
    </div>
    <br />

    <div class="mt-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="City">Konum</label>
        </div>
        <select id="City" name="City" class="custom-select" required>
            <option value="" selected disabled>Şehir...</option>
            <option asp-for="City" name="Adana" value="Adana">Adana</option>
            <option asp-for="City" name="Ankara" value="Ankara">Ankara</option>
            <option asp-for="City" name="Bursa" value="Bursa">Bursa</option>
            <option asp-for="City" name="Gaziantep" value="Gaziantep">Gaziantep</option>
            <option asp-for="City" name="Hatay" value="Hatay">Hatay</option>
            <option asp-for="City" name="İstanbul" value="İstanbul">İstanbul</option>
            <option asp-for="City" name="İzmir" value="İzmir">İzmir</option>
            <option asp-for="City" name="Konya" value="Konya">Konya</option>
            <option asp-for="City" name="Muğla" value="Muğla">Muğla</option>
            <option asp-for="City" name="Trabzon" value="Trabzon">Trabzon</option>
        </select>
    </div>
    <br />
    <br />
    <br />

    <div class="mt-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Adres</span>
            </div>
            <textarea asp-for="LocationName" class="form-control" aria-label="With textarea" required></textarea>
        </div>
    </div>
    <br />




    <div class="mt-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Aracın Durumu</span>
            </div>
            <textarea asp-for="VehicleSituation" class="form-control" aria-label="With textarea" required></textarea>
        </div>
    </div>
    <br />

    <div class="mt-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="FuelType">Yakıt</label>
        </div>
        <select id="FuelType" name="FuelType" class="custom-select" required>
            <option value="" selected disabled>Yakıt...</option>
            <option asp-for="FuelType" name="Benzin" value="Benzin">Benzin</option>
            <option asp-for="FuelType" name="Dizel" value="Dizel">Dizel</option>
            <option asp-for="FuelType" name="Otogaz" value="Otogaz">Otogaz</option>
            <option asp-for="FuelType" name="Hidrojen" value="Hidrojen">Hidrojen</option>
            <option asp-for="FuelType" name="Elektrik" value="Elektrik">Elektrik</option>
            <option asp-for="FuelType" name="Hybrid" value="Hybrid">Hybrid</option>
        </select>
    </div>
    <br />
    <br />
    <br />

    <div class="mt-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Fiyat</span>
            </div>
            <textarea asp-for="VehiclePrice" class="form-control" aria-label="With textarea" required></textarea>
        </div>
    </div>
    <br />

    <div class="mt-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="StatusInfo">Durum</label>
        </div>
        <select id="StatusInfo" name="StatusInfo" class="custom-select" required>
            <option value="" selected disabled>Kiralık/Satılık seçimi yapınız...</option>
            <option asp-for="StatusInfo" name="Kiralık" value="Kiralık">Kiralık</option>
            <option asp-for="StatusInfo" name="Satılık" value="Satılık">Satılık</option>
        </select>
    </div>
    <br />
    <br />
    <br />

    <input type="file" name="VehiclePicture" required />

    <!--
        <b>Araç fotoğrafı ekleyebilirsiniz. (.jpeg ve .png uzantılı dosyalar kabul edilmektedir)</b>
        <br />
        <input asp-for="VehiclePicture" id="fileInput" type="file" name="postedFile" accept="audio/*,image/*" />

        <br />
    -->
    <button id="btnSaveForReading" type="submit" class="btn btn-success btnSaveForReading" style="float: right;">Kaydet</button>

    <br />
    <br />
</form>

